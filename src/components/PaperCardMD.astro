---
import type { CollectionEntry } from "astro:content";

export interface Props {
  paper: CollectionEntry<"papers">;
}

const { paper } = Astro.props;
const { title, date } = paper.data;

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString("ja-JP");
}
---

<article class="paper-card">
  <div class="paper-header">
    <h2 class="paper-title">
      <a href={`/papers/${paper.slug}`}>{title}</a>
    </h2>
    <div class="paper-meta">
      <span class="read-date">読了: {formatDate(date)}</span>
    </div>
  </div>
  <div class="paper-footer">
    <div class="read-more">
      <a href={`/papers/${paper.slug}`} class="read-more-link">
        詳細を見る →
      </a>
    </div>
  </div>
</article>

<style>
  .paper-card {
    background: #111111;
    border-radius: 0;
    padding: 1.5rem;
    box-shadow: none;
    border: 1px solid #333333;
    transition: all 0.3s ease;
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .paper-card:hover {
    border-color: #4a9eff;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(74, 158, 255, 0.1);
  }

  .paper-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .paper-card:hover::before {
    transform: scaleX(1);
  }

  .paper-header {
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .paper-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.3;
    letter-spacing: 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-title a {
    text-decoration: none;
    color: #ffffff;
    transition: color 0.3s ease;
  }

  .paper-title a:hover {
    color: #4a9eff;
  }

  .paper-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
    color: #888888;
    font-family: "Plus Jakarta Sans", sans-serif;
    font-weight: 400;
  }

  .read-date {
    color: #999999;
    font-size: 0.85rem;
  }

  .paper-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #222222;
  }

  .read-more {
    text-align: right;
  }

  .read-more-link {
    color: #4a9eff;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .read-more-link:hover {
    color: #66b3ff;
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .paper-card {
      padding: 1.25rem;
    }

    .paper-meta {
      flex-direction: column;
      gap: 0.25rem;
    }

    .paper-title {
      font-size: 1.0625rem;
    }
  }
</style>
