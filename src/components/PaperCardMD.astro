---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils/date";

export interface Props {
  paper: CollectionEntry<"papers">;
}

const { paper } = Astro.props;
const { title, date } = paper.data;
---

<article class="paper-card">
  <div class="paper-header">
    <h2 class="paper-title">
      <a href={`/papers/${paper.slug}`}>{title}</a>
    </h2>
    <div class="paper-meta">
      <span class="read-date">Ë™≠‰∫Ü: {formatDate(date)}</span>
    </div>
  </div>
  <div class="paper-footer">
    <div class="read-more">
      <a href={`/papers/${paper.slug}`} class="read-more-link">
        Ë©≥Á¥∞„ÇíË¶ã„Çã ‚Üí
      </a>
    </div>
  </div>
</article>

<style>
  .paper-card {
    background: linear-gradient(135deg, #111111 0%, #0a0a0a 100%);
    border-radius: 0;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 1;
    isolation: isolate;
    box-sizing: border-box;
  }

  .paper-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(74, 158, 255, 0.03),
      transparent
    );
    transition: left 0.8s ease;
  }

  .paper-card:hover {
    border-color: rgba(74, 158, 255, 0.4);
    transform: translateY(-6px) scale(1.02);
    box-shadow:
      0 8px 32px rgba(74, 158, 255, 0.15),
      0 0 0 1px rgba(74, 158, 255, 0.1);
  }

  .paper-card:hover::before {
    left: 100%;
  }

  .paper-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff, #4a9eff);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.4s ease;
  }

  .paper-card:hover::after {
    transform: scaleX(1);
  }

  .paper-header {
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .paper-title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-weight: 500;
    line-height: 1.3;
    letter-spacing: -0.025em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-title a {
    text-decoration: none;
    color: #ffffff;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
  }

  .paper-title a::before {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.3s ease;
  }

  .paper-title a:hover {
    color: #4a9eff;
    transform: translateX(2px);
  }

  .paper-title a:hover::before {
    width: 100%;
  }

  .paper-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.85rem;
    color: #aaaaaa;
    font-family: "Plus Jakarta Sans", sans-serif;
    font-weight: 400;
  }

  .read-date {
    color: #999999;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
    position: relative;
    padding-left: 1rem;
  }

  .read-date::before {
    content: "üìÖ";
    position: absolute;
    left: 0;
    font-size: 0.7rem;
    opacity: 0.6;
  }

  .paper-footer {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .paper-footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.4s ease;
  }

  .paper-card:hover .paper-footer::before {
    width: 100%;
  }

  .read-more {
    text-align: right;
  }

  .read-more-link {
    color: #4a9eff;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    padding: 0.5rem 0;
  }

  .read-more-link::after {
    content: "‚Üí";
    transition: transform 0.3s ease;
  }

  .read-more-link:hover {
    color: #66b3ff;
    transform: translateX(4px);
  }

  .read-more-link:hover::after {
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .paper-card {
      padding: 1.5rem;
      margin: 0;
      position: relative;
      z-index: auto;
      transform: none;
      box-sizing: border-box;
      width: 100%;
      min-height: auto;
    }

    .paper-header {
      margin-bottom: 1.25rem;
    }

    .paper-title {
      font-size: 1.125rem;
      line-height: 1.4;
    }

    .paper-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .read-date {
      font-size: 0.85rem;
      padding-left: 1.25rem;
    }

    .paper-footer {
      padding-top: 1.25rem;
    }

    .read-more-link {
      font-size: 0.9rem;
      padding: 0.75rem 0;
      min-height: 44px; /* „Çø„ÉÉ„ÉÅ„Éï„É¨„É≥„Éâ„É™„Éº */
      display: flex;
      align-items: center;
      justify-content: flex-end;
    }
  }

  /* Â∞è„Åï„Å™„É¢„Éê„Ç§„É´ÁîªÈù¢Áî® */
  @media (max-width: 480px) {
    .paper-card {
      padding: 1.25rem;
      position: relative;
      z-index: auto;
      transform: none;
      box-sizing: border-box;
      width: 100%;
      margin: 0;
    }

    .paper-title {
      font-size: 1rem;
    }

    .paper-meta {
      gap: 0.25rem;
    }

    .read-date {
      font-size: 0.8rem;
      padding-left: 1rem;
    }

    .read-date::before {
      font-size: 0.65rem;
    }

    .read-more-link {
      font-size: 0.85rem;
    }
  }
</style>
