---
import type { CollectionEntry } from "astro:content";

export interface Props {
  paper: CollectionEntry<"papers">;
}

const { paper } = Astro.props;
const { title, date } = paper.data;

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString("ja-JP");
}
---

<article class="paper-card">
  <div class="paper-header">
    <h2 class="paper-title">
      <a href={`/papers/${paper.slug}`}>{title}</a>
    </h2>
    <div class="paper-meta">
      <span class="read-date">読了: {formatDate(date)}</span>
    </div>
  </div>
</article>

<style>
  .paper-card {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    backdrop-filter: blur(20px) saturate(180%);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(148, 163, 184, 0.1);
    border: 1px solid rgba(148, 163, 184, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    animation: slideInUp 0.6s ease-out both;
    animation-delay: calc(var(--card-index, 0) * 0.1s);
  }

  .paper-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.02) 0%, rgba(59, 130, 246, 0.01) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .paper-card:hover::before {
    opacity: 1;
  }

  .paper-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(96, 165, 250, 0.2),
      0 0 40px rgba(96, 165, 250, 0.1);
    border-color: rgba(96, 165, 250, 0.3);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .paper-header {
    margin-bottom: 1rem;
  }

  .paper-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.02em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-title a {
    text-decoration: none;
    background: linear-gradient(135deg, #f1f5f9 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .paper-title a:hover {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transform: translateX(4px);
  }

  .paper-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
    color: #94a3b8;
    font-family: "Plus Jakarta Sans", sans-serif;
    font-weight: 500;
  }

  .read-date {
    color: #94a3b8;
  }

  @media (max-width: 768px) {
    .paper-card {
      padding: 1rem;
    }

    .paper-meta {
      flex-direction: column;
      gap: 0.25rem;
    }

    .paper-title {
      font-size: 1.125rem;
    }
  }
</style>
