---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils/date";

export interface Props {
  paper: CollectionEntry<"papers">;
}

const { paper } = Astro.props;
const { title, date } = paper.data;
---

<article class="paper-card">
  <div class="paper-header">
    <h2 class="paper-title">
      <a href={`/papers/${paper.slug}`}>{title}</a>
    </h2>
    <div class="paper-meta">
      <span class="read-date">読了: {formatDate(date)}</span>
    </div>
  </div>
  <div class="paper-footer">
    <div class="read-more">
      <a href={`/papers/${paper.slug}`} class="read-more-link">
        詳細を見る →
      </a>
    </div>
  </div>
</article>

<style>
  .paper-card {
    background: linear-gradient(135deg, #111111 0%, #0a0a0a 100%);
    border-radius: 12px; /* 改善: より大きな角丸 */
    padding: 2.25rem; /* 改善: パディング増加 */
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.4),
      /* 改善: より深いシャドウ */ 0 1px 0 rgba(255, 255, 255, 0.05); /* 改善: 上部ハイライト */
    border: 1px solid rgba(255, 255, 255, 0.12); /* 改善: より濃いボーダー */
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 1;
    isolation: isolate;
    box-sizing: border-box;
  }

  .paper-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(74, 158, 255, 0.03),
      transparent
    );
    transition: left 0.8s ease;
  }

  .paper-card:hover {
    border-color: rgba(74, 158, 255, 0.4);
    transform: translateY(-6px) scale(1.02);
    box-shadow:
      0 8px 32px rgba(74, 158, 255, 0.15),
      0 0 0 1px rgba(74, 158, 255, 0.1);
  }

  .paper-card:hover::before {
    left: 100%;
  }

  .paper-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff, #4a9eff);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.4s ease;
  }

  .paper-card:hover::after {
    transform: scaleX(1);
  }

  .paper-header {
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .paper-title {
    margin: 0 0 1.25rem 0; /* 改善: マージン増加 */
    font-size: 1.375rem; /* 改善: フォントサイズ増加 */
    font-weight: 600; /* 改善: より太いフォント */
    line-height: 1.25; /* 改善: 行間調整 */
    letter-spacing: -0.02em; /* 改善: 文字間調整 */
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-title a {
    text-decoration: none;
    color: #ffffff;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
  }

  .paper-title a::before {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.3s ease;
  }

  .paper-title a:hover {
    color: #4a9eff;
    transform: translateX(2px);
  }

  .paper-title a:hover::before {
    width: 100%;
  }

  .paper-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem; /* 改善: ギャップ増加 */
    font-size: 0.9rem; /* 改善: フォントサイズ調整 */
    color: #b8b8b8; /* 改善: より明るい色 */
    font-family: "Plus Jakarta Sans", sans-serif;
    font-weight: 400;
  }

  .read-date {
    color: #a8a8a8; /* 改善: より明るい色 */
    font-size: 0.85rem; /* 改善: フォントサイズ調整 */
    letter-spacing: 0.3px; /* 改善: 文字間調整 */
    position: relative;
    padding-left: 1.25rem; /* 改善: パディング調整 */
    opacity: 0.9; /* 改善: 透明度で階層表現 */
  }

  .read-date::before {
    content: "📅";
    position: absolute;
    left: 0;
    font-size: 0.7rem;
    opacity: 0.6;
  }

  .paper-footer {
    margin-top: auto;
    padding-top: 2rem; /* 改善: パディング増加 */
    border-top: 1px solid rgba(255, 255, 255, 0.12); /* 改善: より濃いボーダー */
    position: relative;
  }

  .paper-footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.4s ease;
  }

  .paper-card:hover .paper-footer::before {
    width: 100%;
  }

  .read-more {
    text-align: right;
  }

  .read-more-link {
    color: #5cc7ff; /* 改善: より明るいリンク色 */
    text-decoration: none;
    font-size: 0.9rem; /* 改善: フォントサイズ調整 */
    font-weight: 600; /* 改善: より太いフォント */
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.625rem; /* 改善: ギャップ調整 */
    position: relative;
    padding: 0.75rem 0; /* 改善: パディング増加 */
  }

  .read-more-link::after {
    content: "→";
    transition: transform 0.3s ease;
  }

  .read-more-link:hover {
    color: #66b3ff;
    transform: translateX(4px);
  }

  .read-more-link:hover::after {
    transform: translateX(2px);
  }

  /* タブレット対応 (1024px以下) */
  @media (max-width: 1024px) {
    .paper-card {
      padding: 1.75rem;
    }

    .paper-title {
      font-size: 1.2rem;
    }

    .paper-meta {
      font-size: 0.8rem;
    }

    .read-date {
      font-size: 0.75rem;
    }

    .read-more-link {
      font-size: 0.8rem;
    }
  }

  /* モバイル対応 (768px以下) */
  @media (max-width: 768px) {
    .paper-card {
      padding: 1.25rem;
      margin: 0;
      position: relative;
      z-index: auto;
      transform: none;
      box-sizing: border-box;
      width: 100%;
      min-height: auto;
    }

    .paper-header {
      margin-bottom: 1rem;
    }

    .paper-title {
      font-size: 1.05rem;
      line-height: 1.35;
      margin-bottom: 0.75rem;
    }

    .paper-meta {
      flex-direction: column;
      gap: 0.4rem;
      font-size: 0.75rem;
    }

    .read-date {
      font-size: 0.7rem;
      padding-left: 1rem;
    }

    .read-date::before {
      font-size: 0.6rem;
    }

    .paper-footer {
      padding-top: 1rem;
      margin-top: 1rem;
    }

    .read-more-link {
      font-size: 0.8rem;
      padding: 0.625rem 0;
      min-height: 42px;
      display: flex;
      align-items: center;
      justify-content: flex-end;
    }
  }

  /* 小型モバイル画面 (480px以下) */
  @media (max-width: 480px) {
    .paper-card {
      padding: 1rem;
      position: relative;
      z-index: auto;
      transform: none;
      box-sizing: border-box;
      width: 100%;
      margin: 0;
    }

    .paper-header {
      margin-bottom: 0.875rem;
    }

    .paper-title {
      font-size: 0.95rem;
      line-height: 1.3;
      margin-bottom: 0.625rem;
    }

    .paper-meta {
      gap: 0.3rem;
      font-size: 0.7rem;
    }

    .read-date {
      font-size: 0.65rem;
      padding-left: 0.875rem;
    }

    .read-date::before {
      font-size: 0.55rem;
      left: 0;
    }

    .paper-footer {
      padding-top: 0.875rem;
      margin-top: 0.875rem;
    }

    .read-more-link {
      font-size: 0.75rem;
      padding: 0.5rem 0;
      min-height: 40px;
    }
  }

  /* 極小モバイル画面 (360px以下) */
  @media (max-width: 360px) {
    .paper-card {
      padding: 0.875rem;
    }

    .paper-header {
      margin-bottom: 0.75rem;
    }

    .paper-title {
      font-size: 0.9rem;
      line-height: 1.25;
      margin-bottom: 0.5rem;
    }

    .paper-meta {
      gap: 0.25rem;
      font-size: 0.65rem;
    }

    .read-date {
      font-size: 0.6rem;
      padding-left: 0.75rem;
    }

    .read-date::before {
      font-size: 0.5rem;
    }

    .paper-footer {
      padding-top: 0.75rem;
      margin-top: 0.75rem;
    }

    .read-more-link {
      font-size: 0.7rem;
      padding: 0.4rem 0;
      min-height: 38px;
    }
  }

  /* タッチデバイス用の最適化 */
  @media (hover: none) and (pointer: coarse) {
    /* モバイルデバイスではホバー効果を無効化 */
    .paper-card:hover {
      transform: none;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .paper-card:hover::before {
      left: -100%;
    }

    .paper-card:hover::after {
      transform: scaleX(0);
    }

    .paper-title a:hover {
      color: #ffffff;
      transform: none;
    }

    .paper-title a:hover::before {
      width: 0;
    }

    .paper-card:hover .paper-footer::before {
      width: 0;
    }

    /* タッチ要素のサイズ確保 */
    .read-more-link {
      min-height: 44px;
      padding: 0.75rem 0;
    }
  }
</style>
