---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <h1><a href="/">神林 論文読み履歴</a></h1>
        <nav class="nav">
          <a href="/" class="nav-link">ホーム</a>
        </nav>
      </div>
    </header>
    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="footer">
      <div class="container">
        <p>&copy; 2025 神林 論文読み履歴</p>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: "Plus Jakarta Sans", system-ui, sans-serif;
    background: #000000;
    min-height: 100vh;
    color: #ffffff;
    font-feature-settings:
      "kern" 1,
      "liga" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    line-height: 1.6;
    overflow-x: hidden;
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* シンプルなモノクロームスクロールバー */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: #000000;
  }

  ::-webkit-scrollbar-thumb {
    background: #4a9eff;
    border-radius: 3px;
    transition: background 0.3s ease;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #66b3ff;
  }

  /* Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: #4a9eff #000000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header {
    background: #000000;
    border-bottom: 1px solid #333333;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }

  .header h1 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 500;
    letter-spacing: 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .header h1 a {
    text-decoration: none;
    color: #ffffff;
    position: relative;
    transition: color 0.3s ease;
  }

  .header h1 a:hover {
    color: #4a9eff;
  }

  .nav {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    color: #cccccc;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #4a9eff;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #4a9eff;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .main {
    padding: 2rem 0;
    min-height: calc(100vh - 120px);
  }

  .footer {
    background: #111111;
    border-top: 1px solid #333333;
    padding: 1.5rem 0;
    margin-top: 3rem;
  }

  .footer p {
    margin: 0;
    text-align: center;
    color: #666666;
    font-size: 0.85rem;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .header .container {
      padding: 0.75rem;
      flex-direction: column;
      gap: 0.75rem;
    }

    .header h1 {
      font-size: 1.125rem;
    }

    .nav {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.85rem;
    }

    .main {
      min-height: calc(100vh - 140px);
    }
  }
</style>
