---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000000" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="論文メモ" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <h1><a href="/">神林 論文読み履歴</a></h1>
        <nav class="nav">
          <a href="/" class="nav-link">ホーム</a>
        </nav>
      </div>
    </header>
    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="footer">
      <div class="container">
        <p>&copy; 2025 神林 論文読み履歴</p>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: "Plus Jakarta Sans", system-ui, sans-serif;
    background: #000000;
    min-height: 100vh;
    color: #ffffff;
    font-feature-settings:
      "kern" 1,
      "liga" 1,
      "calt" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  body {
    margin: 0;
    line-height: 1.6;
    overflow-x: hidden;
    animation: fadeIn 0.5s ease-in;
    background: linear-gradient(135deg, #000000 0%, #0a0a0a 100%);
    min-height: 100vh;
  }

  /* グローバルアニメーション */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* フォーカス管理の改善 */
  :focus-visible {
    outline: 2px solid #4a9eff !important;
    outline-offset: 2px !important;
    border-radius: 4px;
  }

  /* アクセシビリティ: 動きを減らす設定 */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* 高コントラストモード対応 */
  @media (prefers-contrast: high) {
    .stat-item,
    .paper-card,
    .search-input,
    .filter-select {
      border-width: 2px !important;
    }

    .stat-number,
    .paper-title a {
      font-weight: 700 !important;
    }
  }

  /* ダークモード強制 */
  @media (prefers-color-scheme: light) {
    html {
      color-scheme: dark;
    }
  }

  /* シンプルなモノクロームスクロールバー */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: #000000;
  }

  ::-webkit-scrollbar-thumb {
    background: #4a9eff;
    border-radius: 3px;
    transition: background 0.3s ease;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #66b3ff;
  }

  /* Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: #4a9eff #000000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header {
    background: rgba(0, 0, 0, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .header::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(74, 158, 255, 0.3),
      transparent
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .header:hover::before {
    opacity: 1;
  }

  .header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    position: relative;
  }

  .header h1 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 500;
    letter-spacing: -0.025em;
    font-family: "Plus Jakarta Sans", sans-serif;
    position: relative;
  }

  .header h1 a {
    text-decoration: none;
    color: #ffffff;
    position: relative;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .header h1 a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.3s ease;
  }

  .header h1 a:hover {
    color: #4a9eff;
    transform: translateY(-1px);
  }

  .header h1 a:hover::after {
    width: 100%;
  }

  .nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: #cccccc;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.3s ease;
    position: relative;
    padding: 0.5rem 0;
    letter-spacing: 0;
  }

  .nav-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #ffffff;
    transform: translateY(-1px);
  }

  .nav-link:hover::before {
    width: 100%;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #4a9eff;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .main {
    padding: 2rem 0;
    min-height: calc(100vh - 120px);
  }

  .footer {
    background: linear-gradient(135deg, #0a0a0a 0%, #000000 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem 0;
    margin-top: 3rem;
    position: relative;
  }

  .footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(74, 158, 255, 0.3),
      transparent
    );
  }

  .footer p {
    margin: 0;
    text-align: center;
    color: #888888;
    font-size: 0.85rem;
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .header .container {
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .header h1 {
      font-size: 1.25rem;
      text-align: center;
    }

    .nav {
      gap: 1.5rem;
      justify-content: center;
    }

    .nav-link {
      font-size: 0.9rem;
      padding: 0.75rem 0;
      min-height: 44px; /* タッチフレンドリーなサイズ */
      display: flex;
      align-items: center;
    }

    .main {
      min-height: calc(100vh - 160px);
      padding: 1rem 0;
    }

    .footer {
      padding: 2rem 0;
    }

    .footer p {
      font-size: 0.8rem;
      padding: 0 1rem;
    }
  }

  /* 小さなモバイル画面用 */
  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }

    .header .container {
      padding: 0.75rem;
    }

    .header h1 {
      font-size: 1.1rem;
    }

    .nav {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.85rem;
    }

    .main {
      padding: 0.75rem 0;
    }
  }
</style>
