---
import Layout from "../layouts/Layout.astro";
import PaperCardMD from "../components/PaperCardMD.astro";
import { getCollection } from "astro:content";

// Content Collectionsから論文を取得
const papers = await getCollection("papers");

// 日付でソート（新しい順）
const sortedPapers = papers.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const totalPapers = papers.length;
---

<Layout title="論文メモ">
  <div class="hero">
    <h1>Papers</h1>
    <p class="subtitle">{totalPapers} papers collected</p>
  </div>

  <section class="papers-list">
    {
      sortedPapers.length === 0 ? (
        <div class="empty-state">
          <p>まだ論文が追加されていません。</p>
          <p>
            src/content/papers/
            ディレクトリにMarkdownファイルを追加してください。
          </p>
        </div>
      ) : (
        <div class="papers-grid">
          {sortedPapers.map((paper, index) => (
            <div style={`--card-index: ${index}`}>
              <PaperCardMD paper={paper} />
            </div>
          ))}
        </div>
      )
    }
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 6rem 0 4rem 0;
    margin-bottom: 4rem;
    position: relative;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(96, 165, 250, 0.02) 100%);
    border-radius: 24px;
    overflow: hidden;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(ellipse at center, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
    z-index: -1;
  }

  .hero::after {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      #60a5fa 20%,
      #3b82f6 50%,
      #60a5fa 80%,
      transparent 100%
    );
    border-radius: 1px;
    box-shadow: 0 0 20px rgba(96, 165, 250, 0.5);
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0%, 0%) rotate(0deg);
    }
    33% {
      transform: translate(1%, -1%) rotate(120deg);
    }
    66% {
      transform: translate(-1%, 1%) rotate(240deg);
    }
  }

  .hero h1 {
    font-size: 3.5rem;
    margin: 0 0 0.5rem 0;
    font-weight: 800;
    background: linear-gradient(135deg, #f1f5f9 0%, #94a3b8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.05em;
    font-family: "Plus Jakarta Sans", sans-serif;
    line-height: 1.1;
    text-shadow: 0 0 40px rgba(96, 165, 250, 0.3);
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 20px rgba(96, 165, 250, 0.2);
    }
    to {
      text-shadow: 0 0 30px rgba(96, 165, 250, 0.4);
    }
  }

  .subtitle {
    color: #94a3b8;
    font-size: 1.25rem;
    font-weight: 500;
    margin: 0;
    letter-spacing: -0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
    opacity: 0.9;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 0.9;
      transform: translateY(0);
    }
  }

  .papers-list h2 {
    font-size: 2rem;
    margin: 0 0 1.5rem 0;
    color: #f1f5f9;
  }

  .papers-grid {
    display: grid;
    gap: 2rem;
    animation: fadeIn 1s ease-out 0.5s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    backdrop-filter: blur(20px) saturate(180%);
    border-radius: 20px;
    border: 1px solid rgba(148, 163, 184, 0.1);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .empty-state::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(96, 165, 250, 0.03) 50%, transparent 70%);
    pointer-events: none;
  }

  .empty-state p {
    color: #94a3b8;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem 2rem 1rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
