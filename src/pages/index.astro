---
import Layout from "../layouts/Layout.astro";
import PaperCardMD from "../components/PaperCardMD.astro";
import { getCollection } from "astro:content";

// Content Collectionsから論文を取得
const papers = await getCollection("papers");

// 日付でソート（新しい順）
const sortedPapers = papers.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const totalPapers = papers.length;
---

<Layout title="論文メモ">
  <div class="hero">
    <h1>Papers</h1>
    <p class="subtitle">{totalPapers} papers collected</p>
  </div>

  <section class="papers-list">
    {
      sortedPapers.length === 0 ? (
        <div class="empty-state">
          <p>まだ論文が追加されていません。</p>
          <p>
            src/content/papers/
            ディレクトリにMarkdownファイルを追加してください。
          </p>
        </div>
      ) : (
        <div class="papers-grid">
          {sortedPapers.map((paper) => (
            <PaperCardMD paper={paper} />
          ))}
        </div>
      )
    }
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0 3rem 0;
    margin-bottom: 3rem;
    position: relative;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      #60a5fa 50%,
      transparent 100%
    );
  }

  .hero h1 {
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    font-weight: 700;
    color: #f1f5f9;
    letter-spacing: -0.04em;
    font-family: "Plus Jakarta Sans", sans-serif;
    line-height: 1.1;
  }

  .subtitle {
    color: #64748b;
    font-size: 1.125rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: -0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .papers-list h2 {
    font-size: 2rem;
    margin: 0 0 1.5rem 0;
    color: #f1f5f9;
  }

  .papers-grid {
    display: grid;
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    background: #1e293b;
    border-radius: 12px;
    border: 2px dashed #475569;
  }

  .empty-state p {
    color: #94a3b8;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem 2rem 1rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
