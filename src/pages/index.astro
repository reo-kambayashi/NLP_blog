                card.style.display = "block";
                card.style.animation = "fadeInUp 0.3s ease forwards";
              } else {
                card.style.display = "none";
              }
            });

            // æ¤œç´¢çµ±è¨ˆã®æ›´æ–°
            updateSearchStats(
              query,
              selectedYear,
              searchablePapers.length,
              filteredPapers.length
            );

            // æ¤œç´¢å€™è£œã®éè¡¨ç¤º
            if (query) {
              searchSuggestion.style.display = "none";
            } else if (!isMobile || document.activeElement !== searchInput) {
              searchSuggestion.style.display = "block";
            }
          }, delay);
        }

        // æ¤œç´¢çµ±è¨ˆã®æ›´æ–°
        function updateSearchStats(query, year, total, filtered) {
          if (query || year) {
            searchStats.style.display = "block";
            clearSearch.style.display = "inline-block";

            let statsText = `${filtered}ä»¶ / ${total}ä»¶ã‚’è¡¨ç¤º`;
            if (query && year) {
              statsText = `"${query}" ã‹ã¤ ${year}å¹´ã®è«–æ–‡: ${filtered}ä»¶`;
            } else if (query) {
              statsText = `"${query}" ã®æ¤œç´¢çµæœ: ${filtered}ä»¶`;
            } else if (year) {
              statsText = `${year}å¹´ã®è«–æ–‡: ${filtered}ä»¶`;
            }

            searchStatsText.textContent = statsText;
          } else {
            searchStats.style.display = "none";
            clearSearch.style.display = "none";
          }
        }

        // æ¤œç´¢ã‚¯ãƒªã‚¢æ©Ÿèƒ½
        function clearSearchAndFilters() {
          searchInput.value = "";
          yearFilter.value = "";
          searchStats.style.display = "none";
          clearSearch.style.display = "none";
          searchSuggestion.style.display = "block";

          paperCards.forEach((card) => {
            card.style.display = "block";
            card.style.animation = "fadeInUp 0.3s ease forwards";
          });
        }

        // ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
        searchInput.addEventListener("input", performSearch);
        yearFilter.addEventListener("change", performSearch);
        clearSearch.addEventListener("click", clearSearchAndFilters);

        // ãƒšãƒ¼ã‚¸ãƒ­ãƒ¼ãƒ‰æ™‚ã®ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
        paperCards.forEach((card, index) => {
          setTimeout(
            () => {
              card.classList.add("animate-in");
            },
            index * (isMobile ? 50 : 100)
          );

          card.style.animationDelay = `${index * (isMobile ? 0.03 : 0.05)}s`;
        });

        console.log("Search initialization complete");
      }

      // Fuse.jsã®èª­ã¿è¾¼ã¿ã‚’å¾…ã¤
      waitForFuse();
    });
  </script>
