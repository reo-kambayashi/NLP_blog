  <!-- JavaScriptã‚’ç›´æ¥åŸ‹ã‚è¾¼ã¿ -->
  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      // æ¤œç´¢æ©Ÿèƒ½
      const searchInput = document.getElementById("search");
      const yearFilter = document.getElementById("yearFilter");
      const papersGrid = document.getElementById("papersGrid");
      const paperCards = document.querySelectorAll(".paper-card-wrapper");

      if (!searchInput || !yearFilter || !papersGrid) return;

      // ãƒ¢ãƒã‚¤ãƒ«ã§ã®ã‚¿ãƒƒãƒã‚µãƒãƒ¼ãƒˆæ”¹å–„
      const isMobile = window.innerWidth <= 768;

      if (isMobile) {
        // ãƒ¢ãƒã‚¤ãƒ«ã§ã¯æ¤œç´¢å…¥åŠ›æ™‚ã®é…å»¶ã‚’çŸ­ç¸®
        searchInput.setAttribute("autocomplete", "off");
        searchInput.setAttribute("autocorrect", "off");
        searchInput.setAttribute("autocapitalize", "off");
        searchInput.setAttribute("spellcheck", "false");
      }

      // å¹´ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ã®é¸æŠè‚¢ã‚’å‹•çš„ã«ç”Ÿæˆ
      const years = [
        ...new Set(
          Array.from(paperCards).map((card) => card.getAttribute("data-year"))
        ),
      ].sort((a, b) => b - a);

      years.forEach((year) => {
        if (year) {
          const option = document.createElement("option");
          option.value = year;
          option.textContent = year + "å¹´";
          yearFilter.appendChild(option);
        }
      });

      // ãƒ‡ãƒã‚¦ãƒ³ã‚¹æ©Ÿèƒ½ä»˜ããƒ•ã‚£ãƒ«ã‚¿ãƒ¼é–¢æ•°
      let filterTimeout;
      function filterPapers() {
        if (filterTimeout) clearTimeout(filterTimeout);

        const delay = isMobile ? 150 : 50; // ãƒ¢ãƒã‚¤ãƒ«ã§ã¯å°‘ã—é•·ã‚ã®é…å»¶

        filterTimeout = setTimeout(() => {
          const searchTerm = (searchInput.value || "").toLowerCase();
          const selectedYear = yearFilter.value;

          paperCards.forEach((card) => {
            const title = card.getAttribute("data-title") || "";
            const year = card.getAttribute("data-year") || "";

            const matchesSearch = !searchTerm || title.includes(searchTerm);
            const matchesYear = !selectedYear || year === selectedYear;

            const cardElement = card;
            if (matchesSearch && matchesYear) {
              cardElement.style.display = "block";
              cardElement.style.animation = "fadeInUp 0.3s ease forwards";
            } else {
              cardElement.style.display = "none";
            }
          });
        }, delay);
      }

      searchInput.addEventListener("input", filterPapers);
      yearFilter.addEventListener("change", filterPapers);

      // ãƒšãƒ¼ã‚¸ãƒ­ãƒ¼ãƒ‰æ™‚ã®ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
      paperCards.forEach((card, index) => {
        setTimeout(
          () => {
            card.classList.add("animate-in");
          },
          index * (isMobile ? 50 : 100)
        ); // ãƒ¢ãƒã‚¤ãƒ«ã§ã¯å°‘ã—é€Ÿã
      });

      // ã‚«ãƒ¼ãƒ‰è¦ç´ ã«ã‚¹ã‚¿ã‚¬ãƒ¼ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³é…å»¶ã‚’é©ç”¨
      paperCards.forEach((card, index) => {
        card.style.animationDelay = `${index * (isMobile ? 0.03 : 0.05)}s`;
      });

      // ãƒ¢ãƒã‚¤ãƒ«ã§ã®ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ”¹å–„
      if (isMobile) {
        // æ¤œç´¢ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ãŒãƒ•ã‚©ãƒ¼ã‚«ã‚¹ã•ã‚ŒãŸæ™‚ã®ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«èª¿æ•´
        searchInput.addEventListener("focus", () => {
          setTimeout(() => {
            searchInput.scrollIntoView({
              behavior: "smooth",
              block: "center",
            });
          }, 300); // ã‚­ãƒ¼ãƒœãƒ¼ãƒ‰ãŒè¡¨ç¤ºã•ã‚Œã‚‹ã¾ã§å°‘ã—å¾…ã¤
        });
      }
    });
  </script>
</Layout>

