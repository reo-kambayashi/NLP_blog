---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const papers = await getCollection("papers");
  return papers.map((paper: CollectionEntry<"papers">) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

type Props = {
  paper: CollectionEntry<"papers">;
};

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<Layout title={`${paper.data.title} - 論文メモ`}>
  <div class="paper-detail">
    <div class="navigation">
      <a href="/" class="back-link">← 論文一覧に戻る</a>
    </div>

    <article class="paper-article">
      <header class="paper-header">
        <h1>{paper.data.title}</h1>
        <div class="paper-meta">
          <div class="read-date">
            読了日: {paper.data.date}
          </div>
        </div>
      </header>

      <div class="paper-content">
        <Content />
      </div>
    </article>

    <div class="actions">
      <a href="/" class="btn btn-primary">一覧に戻る</a>
    </div>
  </div>
</Layout>

<style>
  .paper-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .navigation {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #ffffff;
    text-decoration: none;
    font-weight: 400;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
    border-bottom: 1px solid transparent;
  }

  .back-link:hover {
    color: #cccccc;
    border-bottom-color: #cccccc;
  }

  .paper-article {
    background: #111111;
    border-radius: 4px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
    margin-bottom: 2rem;
    border: 1px solid #333333;
  }

  .paper-header {
    border-bottom: 1px solid #333333;
    padding-bottom: 1.5rem;
    margin-bottom: 2rem;
  }

  .paper-header h1 {
    color: #ffffff;
    margin: 0 0 1rem 0;
    font-size: 2rem;
    font-weight: 500;
    line-height: 1.3;
    letter-spacing: 0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .read-date {
    color: #999999;
    font-size: 0.9rem;
    font-weight: 400;
    display: inline-block;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: #dbeafe;
    color: #1e40af;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .paper-url {
    margin-top: 1rem;
  }

  .paper-url a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    background: #eff6ff;
    border-radius: 6px;
    transition: all 0.2s;
  }

  .paper-url a:hover {
    background: #dbeafe;
    transform: translateY(-1px);
  }

  .paper-content {
    line-height: 1.7;
    color: #ffffff;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  /* Markdown コンテンツのスタイリング */
  .paper-content :global(h2) {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
    border-bottom: 1px solid #333333;
    padding-bottom: 0.5rem;
    letter-spacing: 0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(h3) {
    color: #ffffff;
    font-size: 1.25rem;
    font-weight: 500;
    margin: 1.5rem 0 0.75rem 0;
    letter-spacing: 0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(h4) {
    color: #cccccc;
    font-size: 1.1rem;
    font-weight: 500;
    margin: 1rem 0 0.5rem 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(p) {
    margin: 0 0 1rem 0;
  }

  .paper-content :global(ul),
  .paper-content :global(ol) {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .paper-content :global(li) {
    margin: 0.25rem 0;
  }

  .paper-content :global(blockquote) {
    border-left: 3px solid #ffffff;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #cccccc;
    background: #0a0a0a;
    padding: 1rem;
    border-radius: 0 4px 4px 0;
  }

  .paper-content :global(code) {
    background: #222222;
    color: #ffffff;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-size: 0.875rem;
    font-family: "JetBrains Mono", "SF Mono", Monaco, "Inconsolata", "Roboto Mono", "Source Code Pro", monospace;
    font-weight: 400;
  }

  .paper-content :global(pre) {
    background: #0a0a0a;
    color: #ffffff;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid #333333;
    font-family: "JetBrains Mono", monospace;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .paper-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }

  .paper-content :global(strong) {
    font-weight: 600;
    color: #ffffff;
  }

  .paper-content :global(em) {
    font-style: italic;
    color: #cccccc;
  }

  .paper-content :global(a) {
    color: #ffffff;
    text-decoration: underline;
    font-weight: 400;
  }

  .paper-content :global(a:hover) {
    color: #cccccc;
  }

  .paper-content :global(hr) {
    border: none;
    border-top: 1px solid #333333;
    margin: 2rem 0;
  }

  .actions {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    font-family: "Plus Jakarta Sans", sans-serif;
    letter-spacing: 0.01em;
    font-size: 0.9rem;
  }

  .btn-primary {
    background: #ffffff;
    color: #000000;
    border: 1px solid #ffffff;
  }

  .btn-primary:hover {
    background: #000000;
    color: #ffffff;
    border-color: #ffffff;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .paper-article {
      padding: 1.5rem;
    }

    .paper-header h1 {
      font-size: 1.5rem;
    }

    .paper-meta {
      gap: 0.75rem;
    }

    .actions {
      flex-direction: column;
      align-items: stretch;
    }

    .paper-content :global(h2) {
      font-size: 1.25rem;
    }

    .paper-content :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>
