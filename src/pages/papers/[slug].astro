---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const papers = await getCollection("papers");
  return papers.map((paper: CollectionEntry<"papers">) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

type Props = {
  paper: CollectionEntry<"papers">;
};

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<Layout title={`${paper.data.title} - 論文メモ`}>
  <div class="paper-detail">
    <div class="navigation">
      <a href="/" class="back-link">← 論文一覧に戻る</a>
    </div>

    <article class="paper-article">
      <header class="paper-header">
        <h1>{paper.data.title}</h1>
        <div class="paper-meta">
          <div class="read-date">
            読了日: {paper.data.date}
          </div>
        </div>
      </header>

      <div class="paper-content">
        <Content />
      </div>
    </article>

    <div class="actions">
      <a href="/" class="btn btn-primary">一覧に戻る</a>
    </div>
  </div>
</Layout>

<style>
  .paper-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .navigation {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0.75rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(96, 165, 250, 0.2);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .back-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .back-link:hover::before {
    opacity: 1;
  }

  .back-link:hover {
    transform: translateX(-4px);
    border-color: rgba(96, 165, 250, 0.4);
    box-shadow: 0 8px 25px rgba(96, 165, 250, 0.2);
  }

  .paper-article {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    backdrop-filter: blur(20px) saturate(180%);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(148, 163, 184, 0.1);
    margin-bottom: 3rem;
    border: 1px solid rgba(148, 163, 184, 0.1);
    position: relative;
    overflow: hidden;
    animation: fadeInScale 0.8s ease-out both;
  }

  .paper-article::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.02) 0%, rgba(59, 130, 246, 0.01) 100%);
    pointer-events: none;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .paper-header {
    border-bottom: 2px solid rgba(96, 165, 250, 0.2);
    padding-bottom: 2rem;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .paper-header::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
    border-radius: 1px;
    box-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
  }

  .paper-header h1 {
    background: linear-gradient(135deg, #f1f5f9 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 1.5rem 0;
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.04em;
    font-family: "Plus Jakarta Sans", sans-serif;
    animation: slideInLeft 0.8s ease-out 0.2s both;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .paper-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .read-date {
    color: #94a3b8;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
    border-radius: 20px;
    border: 1px solid rgba(96, 165, 250, 0.2);
    display: inline-block;
    animation: slideInRight 0.8s ease-out 0.4s both;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: #dbeafe;
    color: #1e40af;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .paper-url {
    margin-top: 1rem;
  }

  .paper-url a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    background: #eff6ff;
    border-radius: 6px;
    transition: all 0.2s;
  }

  .paper-url a:hover {
    background: #dbeafe;
    transform: translateY(-1px);
  }

  .paper-content {
    line-height: 1.8;
    color: #e2e8f0;
    font-family: "Plus Jakarta Sans", sans-serif;
    animation: fadeIn 1s ease-out 0.6s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Markdown コンテンツのスタイリング */
  .paper-content :global(h2) {
    background: linear-gradient(135deg, #f1f5f9 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 1.875rem;
    font-weight: 700;
    margin: 2.5rem 0 1.25rem 0;
    border-bottom: 2px solid rgba(96, 165, 250, 0.2);
    padding-bottom: 0.75rem;
    letter-spacing: -0.02em;
    font-family: "Plus Jakarta Sans", sans-serif;
    position: relative;
  }

  .paper-content :global(h2::after) {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
    border-radius: 1px;
  }

  .paper-content :global(h3) {
    color: #f1f5f9;
    font-size: 1.375rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    letter-spacing: -0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(h4) {
    color: #cbd5e1;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1rem 0 0.5rem 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(p) {
    margin: 0 0 1rem 0;
  }

  .paper-content :global(ul),
  .paper-content :global(ol) {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .paper-content :global(li) {
    margin: 0.25rem 0;
  }

  .paper-content :global(blockquote) {
    border-left: 4px solid #60a5fa;
    padding: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #cbd5e1;
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 41, 59, 0.6) 100%);
    backdrop-filter: blur(10px);
    border-radius: 0 12px 12px 0;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .paper-content :global(blockquote::before) {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, #60a5fa 0%, #3b82f6 100%);
    box-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
  }

  .paper-content :global(code) {
    background: #334155;
    color: #fbbf24;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-size: 0.875rem;
    font-family: "JetBrains Mono", "SF Mono", Monaco, "Inconsolata", "Roboto Mono", "Source Code Pro", monospace;
    font-weight: 400;
  }

  .paper-content :global(pre) {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.9) 0%, rgba(30, 41, 59, 0.7) 100%);
    backdrop-filter: blur(10px);
    color: #f1f5f9;
    padding: 1.5rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(96, 165, 250, 0.2);
    font-family: "JetBrains Mono", monospace;
    font-size: 0.875rem;
    line-height: 1.6;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    position: relative;
  }

  .paper-content :global(pre::before) {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #60a5fa 50%, transparent 100%);
  }

  .paper-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }

  .paper-content :global(strong) {
    font-weight: 700;
    color: #f1f5f9;
  }

  .paper-content :global(em) {
    font-style: italic;
    color: #94a3b8;
  }

  .paper-content :global(a) {
    color: #60a5fa;
    text-decoration: none;
    font-weight: 500;
  }

  .paper-content :global(a:hover) {
    text-decoration: underline;
  }

  .paper-content :global(hr) {
    border: none;
    border-top: 1px solid #475569;
    margin: 2rem 0;
  }

  .actions {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    font-family: "Plus Jakarta Sans", sans-serif;
    letter-spacing: -0.01em;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    position: relative;
    overflow: hidden;
  }

  .btn-primary::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(59, 130, 246, 0.4);
  }

  @media (max-width: 768px) {
    .paper-article {
      padding: 1.5rem;
    }

    .paper-header h1 {
      font-size: 1.5rem;
    }

    .paper-meta {
      gap: 0.75rem;
    }

    .authors {
      flex-direction: column;
      align-items: flex-start;
    }

    .actions {
      flex-direction: column;
      align-items: stretch;
    }

    .paper-content :global(h2) {
      font-size: 1.25rem;
    }

    .paper-content :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>
