---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const papers = await getCollection("papers");
  return papers.map((paper: CollectionEntry<"papers">) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

type Props = {
  paper: CollectionEntry<"papers">;
};

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<Layout title={`${paper.data.title} - 論文メモ`}>
  <div class="paper-detail">
    <!-- パンくずリスト -->
    <nav class="breadcrumb">
      <a href="/" class="breadcrumb-link">ホーム</a>
      <span class="breadcrumb-separator">›</span>
      <span class="breadcrumb-current">論文詳細</span>
    </nav>

    <div class="navigation">
      <a href="/" class="back-link">← 論文一覧に戻る</a>
    </div>

    <article class="paper-article">
      <header class="paper-header">
        <h1>{paper.data.title}</h1>
        <div class="paper-meta">
          <div class="read-date">
            読了日: {paper.data.date}
          </div>
        </div>
      </header>

      <div class="paper-content">
        <Content />
      </div>
    </article>

    <div class="actions">
      <a href="/" class="btn btn-primary">一覧に戻る</a>
    </div>
  </div>

  <!-- 目次とスクロール効果のためのJavaScript -->
  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      // スムーズスクロール効果
      const links = document.querySelectorAll('a[href^="#"]');
      links.forEach((link) => {
        link.addEventListener("click", (e) => {
          const href = link.getAttribute("href");
          if (href && href !== "#") {
            const target = document.querySelector(href);
            if (target) {
              e.preventDefault();
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          }
        });
      });

      // 読書進捗インジケーター
      const progressBar = document.createElement("div");
      progressBar.className = "reading-progress";
      document.body.appendChild(progressBar);

      function updateProgress() {
        const scrollTop = window.pageYOffset;
        const docHeight =
          document.documentElement.scrollHeight - window.innerHeight;
        const progress = (scrollTop / docHeight) * 100;
        progressBar.style.width = progress + "%";
      }

      window.addEventListener("scroll", updateProgress);
      updateProgress();
    });
  </script>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: #999999;
  }

  .breadcrumb-link {
    color: #4a9eff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: #66b3ff;
  }

  .breadcrumb-separator {
    color: #666666;
  }

  .breadcrumb-current {
    color: #cccccc;
  }

  /* 読書進捗バー */
  :global(.reading-progress) {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: linear-gradient(90deg, #4a9eff, #66b3ff);
    z-index: 1000;
    transition: width 0.1s ease;
  }

  .paper-detail {
    max-width: 750px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .navigation {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #8a8a8a; /* より柔らかいグレー */
    text-decoration: none;
    font-weight: 400;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
    border-bottom: 1px solid transparent;
    font-size: 0.9rem;
  }

  .back-link:hover {
    color: #ffffff;
    border-bottom-color: #ffffff;
  }

  .paper-article {
    background: #111111;
    border-radius: 0;
    padding: 2.5rem;
    box-shadow: none;
    margin-bottom: 2rem;
    border: 1px solid #333333;
  }

  .paper-header {
    border-bottom: 1px solid #444444; /* より明るいボーダー */
    padding-bottom: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .paper-header h1 {
    color: #ffffff;
    margin: 0 0 1rem 0;
    font-size: 1.875rem;
    font-weight: 500;
    line-height: 1.3;
    letter-spacing: -0.025em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .read-date {
    color: #999999;
    font-size: 0.95rem;
    font-weight: 400;
    display: inline-block;
  }

  .paper-content {
    line-height: 1.8;
    color: #e0e0e0; /* より明るい本文色 */
    font-family: "Plus Jakarta Sans", sans-serif;
    font-size: 1.0625rem;
    font-weight: 400;
  }

  /* Markdown コンテンツのスタイリング */
  .paper-content :global(h2) {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1.25rem 0;
    border-bottom: 2px solid #4a9eff; /* アクセントカラー */
    padding-bottom: 0.75rem;
    letter-spacing: -0.025em;
    font-family: "Plus Jakarta Sans", sans-serif;
    position: relative; /* 追加 */
  }

  /* h2にも縦棒を追加 */
  .paper-content :global(h2::before) {
    content: "";
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px; /* h3より太く */
    height: 1.4em; /* h3より高く */
    background: #4a9eff; /* アクセントカラー */
  }

  .paper-content :global(h3) {
    color: #ffffff;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
    letter-spacing: -0.025em;
    font-family: "Plus Jakarta Sans", sans-serif;
    position: relative;
  }

  .paper-content :global(h3::before) {
    content: "";
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 2px; /* 3pxから2pxに細く */
    height: 1.2em;
    background: #4a9eff; /* アクセントカラー */
  }

  .paper-content :global(h4) {
    color: #cccccc;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .paper-content :global(ul),
  .paper-content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 2rem;
  }

  .paper-content :global(li) {
    margin: 0.5rem 0;
    line-height: 1.6;
    color: #e0e0e0; /* リスト項目も明るく */
  }

  /* 重要なリスト項目のハイライト */
  .paper-content :global(li strong) {
    color: #4a9eff; /* 強調テキストにアクセントカラー */
  }

  .paper-content :global(blockquote) {
    border-left: 4px solid #4a9eff; /* アクセントカラー */
    padding: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #cccccc;
    background: #0f0f0f; /* より暗い背景 */
    border-radius: 0;
    font-size: 1rem;
    position: relative;
  }

  .paper-content :global(code) {
    background: #1f1f1f; /* より明るい背景 */
    color: #ffd700; /* ゴールド色 */
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.9rem;
    font-family: "JetBrains Mono", "SF Mono", Monaco, "Inconsolata",
      "Roboto Mono", "Source Code Pro", monospace;
    font-weight: 400;
    border: 1px solid #404040; /* より明るいボーダー */
  }

  .paper-content :global(pre) {
    background: #0d0d0d; /* より暗い背景 */
    color: #ffffff;
    padding: 1.5rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid #404040; /* より明るいボーダー */
    font-family: "JetBrains Mono", monospace;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .paper-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
    border: none;
  }

  .paper-content :global(strong) {
    font-weight: 700;
    color: #ffffff;
  }

  .paper-content :global(em) {
    font-style: italic;
    color: #b8b8b8; /* より明るいグレー */
  }

  .paper-content :global(a) {
    color: #4a9eff; /* 統一されたアクセントカラー */
    text-decoration: underline;
    font-weight: 400;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .paper-content :global(a:hover) {
    color: #66b3ff; /* ホバー時の明るい青 */
  }

  .paper-content :global(hr) {
    border: none;
    border-top: 1px solid #444444; /* より明るいライン */
    margin: 3rem 0;
  }

  /* リストのネスト対応 */
  .paper-content :global(ul ul),
  .paper-content :global(ol ol),
  .paper-content :global(ul ol),
  .paper-content :global(ol ul) {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  /* 特定のマーカー（●）にカラーを追加 */
  .paper-content :global(ul > li::marker) {
    color: #4a9eff;
  }

  /* テーブルのスタイル */
  .paper-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    background: #0f0f0f;
    border: 1px solid #404040;
  }

  .paper-content :global(th),
  .paper-content :global(td) {
    padding: 0.75rem;
    border: 1px solid #404040;
    text-align: left;
  }

  .paper-content :global(th) {
    background: #1a1a1a;
    font-weight: 600;
    color: #4a9eff; /* ヘッダーにアクセントカラー */
  }

  .actions {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    font-family: "Plus Jakarta Sans", sans-serif;
    letter-spacing: 0;
    font-size: 0.9rem;
  }

  .btn-primary {
    background: #4a9eff; /* アクセントカラー */
    color: #000000;
    border: 1px solid #4a9eff;
  }

  .btn-primary:hover {
    background: #66b3ff;
    color: #000000;
    border-color: #66b3ff;
    transform: translateY(-1px); /* 微妙な浮き上がり効果 */
  }

  @media (max-width: 768px) {
    .paper-detail {
      padding: 0 1rem;
    }

    .paper-article {
      padding: 1.5rem;
    }

    .paper-header h1 {
      font-size: 1.625rem;
    }

    .paper-meta {
      gap: 0.75rem;
    }

    .paper-content {
      font-size: 1rem;
    }

    /* モバイルでの縦棒調整 */
    .paper-content :global(h2::before) {
      left: -0.75rem; /* モバイルで調整 */
    }

    .paper-content :global(h3::before) {
      left: -0.75rem; /* モバイルで調整 */
    }

    .actions {
      flex-direction: column;
      align-items: stretch;
    }

    .paper-content :global(h2) {
      font-size: 1.375rem;
      margin: 2rem 0 1rem 0;
    }

    .paper-content :global(h3) {
      font-size: 1.125rem;
      margin: 1.5rem 0 0.75rem 0;
    }

    .paper-content :global(ul),
    .paper-content :global(ol) {
      padding-left: 1.5rem;
    }
  }
</style>
