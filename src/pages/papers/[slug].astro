---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const papers = await getCollection("papers");
  return papers.map((paper: CollectionEntry<"papers">) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

type Props = {
  paper: CollectionEntry<"papers">;
};

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<Layout title={`${paper.data.title} - 論文メモ`}>
  <div class="paper-detail">
    <div class="navigation">
      <a href="/" class="back-link">← 論文一覧に戻る</a>
    </div>

    <article class="paper-article">
      <header class="paper-header">
        <h1>{paper.data.title}</h1>
        <div class="paper-meta">
          <div class="read-date">
            読了日: {paper.data.date}
          </div>
        </div>
      </header>

      <div class="paper-content">
        <Content />
      </div>
    </article>

    <div class="actions">
      <a href="/" class="btn btn-primary">一覧に戻る</a>
    </div>
  </div>
</Layout>

<style>
  .paper-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .navigation {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #60a5fa;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #93c5fd;
  }

  .paper-article {
    background: #1e293b;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    margin-bottom: 2rem;
    border: 1px solid #334155;
  }

  .paper-header {
    border-bottom: 2px solid #475569;
    padding-bottom: 1.5rem;
    margin-bottom: 2rem;
  }

  .paper-header h1 {
    color: #f1f5f9;
    margin: 0 0 1rem 0;
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.03em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .read-date {
    color: #94a3b8;
    font-size: 0.875rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: #dbeafe;
    color: #1e40af;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .paper-url {
    margin-top: 1rem;
  }

  .paper-url a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    background: #eff6ff;
    border-radius: 6px;
    transition: all 0.2s;
  }

  .paper-url a:hover {
    background: #dbeafe;
    transform: translateY(-1px);
  }

  .paper-content {
    line-height: 1.7;
    color: #e2e8f0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  /* Markdown コンテンツのスタイリング */
  .paper-content :global(h2) {
    color: #f1f5f9;
    font-size: 1.75rem;
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    border-bottom: 2px solid #475569;
    padding-bottom: 0.5rem;
    letter-spacing: -0.02em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(h3) {
    color: #f1f5f9;
    font-size: 1.375rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    letter-spacing: -0.01em;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(h4) {
    color: #cbd5e1;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1rem 0 0.5rem 0;
    font-family: "Plus Jakarta Sans", sans-serif;
  }

  .paper-content :global(p) {
    margin: 0 0 1rem 0;
  }

  .paper-content :global(ul),
  .paper-content :global(ol) {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .paper-content :global(li) {
    margin: 0.25rem 0;
  }

  .paper-content :global(blockquote) {
    border-left: 4px solid #60a5fa;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
    color: #94a3b8;
    background: #0f172a;
    padding: 1rem;
    border-radius: 0 6px 6px 0;
  }

  .paper-content :global(code) {
    background: #334155;
    color: #fbbf24;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-size: 0.875rem;
    font-family: "JetBrains Mono", "SF Mono", Monaco, "Inconsolata", "Roboto Mono", "Source Code Pro", monospace;
    font-weight: 400;
  }

  .paper-content :global(pre) {
    background: #0f172a;
    color: #f1f5f9;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid #334155;
    font-family: "JetBrains Mono", monospace;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .paper-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }

  .paper-content :global(strong) {
    font-weight: 700;
    color: #f1f5f9;
  }

  .paper-content :global(em) {
    font-style: italic;
    color: #94a3b8;
  }

  .paper-content :global(a) {
    color: #60a5fa;
    text-decoration: none;
    font-weight: 500;
  }

  .paper-content :global(a:hover) {
    text-decoration: underline;
  }

  .paper-content :global(hr) {
    border: none;
    border-top: 1px solid #475569;
    margin: 2rem 0;
  }

  .actions {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    font-family: "Plus Jakarta Sans", sans-serif;
    letter-spacing: -0.01em;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .paper-article {
      padding: 1.5rem;
    }

    .paper-header h1 {
      font-size: 1.5rem;
    }

    .paper-meta {
      gap: 0.75rem;
    }

    .authors {
      flex-direction: column;
      align-items: flex-start;
    }

    .actions {
      flex-direction: column;
      align-items: stretch;
    }

    .paper-content :global(h2) {
      font-size: 1.25rem;
    }

    .paper-content :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>
